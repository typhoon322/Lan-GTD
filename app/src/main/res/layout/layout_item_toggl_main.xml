<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/item_selector"
                android:orientation="horizontal"
                android:padding="@dimen/padding_list_item">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/color_gray_0"
        android:textSize="@dimen/font_large"
        tools:text="This is title"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_gray_1"
        android:textSize="@dimen/font_large"
        tools:text="2016/4/22 19:07"/>


    <View
        android:id="@+id/view_color"
        android:layout_width="@dimen/width_color_tag"
        tools:background="@color/color_theme_1"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"/>

</RelativeLayout>